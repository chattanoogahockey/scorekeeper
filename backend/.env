# Azure Cosmos DB configuration
COSMOS_DB_URI=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key-here
COSMOS_KEY=your-cosmos-db-key-here
COSMOS_DB_NAME=scorekeeper
COSMOS_DB_DATABASE_ID=scorekeeper

# OpenAI API Key for announcer service
OPENAI_API_KEY=your-openai-api-key-here

# Cosmos DB container names - Updated to match your actual containers
COSMOS_DB_GAMES_CONTAINER=games
COSMOS_DB_TEAMS_CONTAINER=teams
COSMOS_DB_ROSTERS_CONTAINER=rosters
COSMOS_DB_ATTENDANCE_CONTAINER=attendance
COSMOS_DB_GOALS_CONTAINER=goals
COSMOS_DB_PENALTIES_CONTAINER=penalties
COSMOS_DB_OTSHOOTOUT_CONTAINER=otshootout

# Admin token for secure operations (generate a strong random token)
ADMIN_TOKEN=your-secure-admin-token-here

# Optional: Port configuration
PORT=3001

# Node environment
NODE_ENV=development

# Google Cloud TTS credentials (file path)
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# Security configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
