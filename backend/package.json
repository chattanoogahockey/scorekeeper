{
  "name": "hockey-scorekeeper-backend",
  "version": "2.1.0",
  "type": "module",
  "description": "Backend API for real-time hockey scorekeeping application with modern architecture.",
  "main": "server-refactored.js",
  "files": [
    "*.js",
    "src/",
    "config/",
    "audio-cache/"
  ],
  "scripts": {
    "start": "node server-refactored.js",
    "dev": "nodemon server-refactored.js",
    "test": "mocha tests/**/*.test.js --timeout 10000",
    "test:watch": "mocha tests/**/*.test.js --watch --timeout 10000",
    "test:coverage": "nyc mocha tests/**/*.test.js --timeout 10000",
    "test:integration": "mocha tests/integration/**/*.test.js --timeout 30000",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "import-historical": "node ./scripts/importHistoricalStats.js",
    "import-historical-direct": "node ./scripts/importHistoricalStatsDirect.js",
    "build": "echo 'Backend build complete - no compilation needed'",
    "health-check": "node -e \"require('./server-refactored.js')\" --health"
  },
  "dependencies": {
    "@azure/cosmos": "^4.1.1",
    "@google-cloud/text-to-speech": "^6.2.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.52.7"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.10",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "hockey",
    "scorekeeper",
    "express",
    "azure-cosmos",
    "real-time",
    "api"
  ],
  "author": "Hockey Scorekeeper Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/hockey-scorekeeper"
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**",
      "node_modules/**"
    ],
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  }
}
